
<!-- 投稿一覧　-->

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th class="title">Title</th>
	   		<th class="opinion">Opinion</th>
	   	</tr>
	</thead>

   	<%= @books.each do |book| %>
	
	<tr>
		<td> <%= attachment_image_tag @user, :profile_image_id, :fill, 20, 20, fallback: "no_image.jpg"%></td>
		<td><%= link_to book.title, book_path(@book_id) %></td>
	 	<td><%= book.body %></td>
   	</tr>
	<% end %>
</table>

<!-- 部分テンプレート -->

<%= render "users/topleft", user: @user %>
<%= render "books/bottomleft", book: @book %>