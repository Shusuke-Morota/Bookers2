<% if @user.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="body">
<div class="container">
    <div class="row">
        <div class="col-xs-3">


            <h1>User info</h1>
            <%= form_for(@user) do |f| %>
            	<div class="form-group has-icon">
                    <label for="user_name">Name</label>
                    <%= f.text_field :name, autofocus: true, class:"name",
                    	id:"user_name" %>
                </div>

            	<div class="form-group has-icon">
                	<div class="user-edit-image">

                	</div>

                	<label for="user_image">Image</label>
                	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
            	</div>

                <label for="introduction">Introduction</label>
            	<%= f.text_area :introduction %>

                <div class="actions">
                    <%= f.submit "Update User" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
</div>